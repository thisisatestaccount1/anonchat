<?xml version="1.0" encoding="UTF-8"?>
<!-- source: http://stackoverflow.com/questions/4836011/use-public-maven-repository-with-ivy -->
<ivysettings>
    <!--  resolve everything from maven2 repository -->
    <settings defaultResolver="chain"/>
    <resolvers>
        <chain name="chain">
            <ibiblio name="central" m2compatible="true"/>
        </chain>
    </resolvers>
</ivysettings>
